<Page
    x:Class="UwpCommunity.Uwp.Samples.Views.Controls.GraphPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UwpCommunity.Uwp.Samples"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:graph="using:UwpCommunity.Uwp.Controls.Graphs"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <graph:BarGraphUserControl
            DataSource="{x:Bind ViewModel.StatisticsCollection, Mode=OneWay}"
            CategoryValueMemberPath="Title"
            ValueMemberPath="Value" 
            ColumnWidth="50"
            BottomContent="bla bla bla"
            Goal="70"
            ScaleBarValue="200"/>
    </Grid>
</Page>
