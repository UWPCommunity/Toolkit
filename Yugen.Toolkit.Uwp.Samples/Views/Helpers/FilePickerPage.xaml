<Page
    x:Class="Yugen.Toolkit.Uwp.Samples.Views.Helpers.FilePickerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Yugen.Toolkit.Uwp.Samples.Views.Helpers"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel>

        <Button Content="Open"
                Click="Open_Click" />

        <Button Content="Open 2"
                Click="Open2_Click" />

        <Button Content="Open 3"
                Click="Open3_Click" />

        <Button Content="Save"
                Click="Save_Click" />
        
        <Button Content="Save"
                Click="Save2_Click" />

    </StackPanel>
</Page>
