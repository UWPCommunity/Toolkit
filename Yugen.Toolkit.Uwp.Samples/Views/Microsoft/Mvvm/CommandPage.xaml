<Page x:Class="Yugen.Toolkit.Uwp.Samples.Views.Mvvm.CommandPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Spacing="4">
        <TextBlock Text="{x:Bind ViewModel.Text, Mode=OneWay}" />

        <Button Command="{x:Bind ViewModel.ShowTextCommand}"
                Content="Show Text" />

        <Button Command="{x:Bind ViewModel.ShowDialogAsyncCommand}"
                Content="Show Dialog" />
    </StackPanel>
</Page>