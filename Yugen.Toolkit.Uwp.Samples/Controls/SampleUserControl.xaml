<UserControl x:Class="Yugen.Toolkit.Uwp.Samples.Controls.SampleUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400">

    <StackPanel Spacing="4">
        <TextBlock Text="{x:Bind Message, Mode=OneWay}" />
        <TextBlock Text="{x:Bind Message2, Mode=OneWay}" />
        <TextBlock Text="{x:Bind Message3, Mode=OneWay}" />
        <TextBlock Text="{x:Bind Message4, Mode=OneWay}" />
    </StackPanel>
</UserControl>